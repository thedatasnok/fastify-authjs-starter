{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src"]
}